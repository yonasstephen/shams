[MASTER]
# Add project root to sys.path so 'tools.*' imports resolve when linting from root
init-hook='import sys, os; sys.path.insert(0, os.getcwd())'

# Use multiple processes to speed up Pylint
jobs=4

# Pickle collected data for later comparisons
persistent=yes

# List of plugins (as comma separated values of python module names)
load-plugins=

[MESSAGES CONTROL]
# Disable specific warnings that are too noisy for this project
disable=
    missing-module-docstring,
    missing-function-docstring,
    missing-class-docstring,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    too-many-instance-attributes,
    fixme,
    broad-except,
    line-too-long,
    invalid-name,
    wrong-import-position,
    wrong-import-order,
    import-outside-toplevel,
    duplicate-code,
    too-many-positional-arguments,
    global-statement,
    global-variable-not-assigned,
    protected-access,
    too-many-nested-blocks,
    logging-fstring-interpolation

[REPORTS]
# Set the output format
output-format=colorized

# Tells whether to display a full report or only the messages
reports=no

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,ex,_,id,db,app,f,e

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

# Maximum number of lines in a module
max-module-lines=2500

[DESIGN]
# Maximum number of arguments for function / method
max-args=10

# Maximum number of locals for function / method body
max-locals=25

# Maximum number of return / yield for function / method body
max-returns=8

# Maximum number of branch for function / method body
max-branches=20

# Maximum number of statements in function / method body
max-statements=50

# Maximum number of attributes for a class
max-attributes=15

[IMPORTS]
# Deprecated modules which should not be used
deprecated-modules=optparse,tkinter.tix

[EXCEPTIONS]
# Exceptions that will emit a warning when caught
overgeneral-exceptions=builtins.Exception
